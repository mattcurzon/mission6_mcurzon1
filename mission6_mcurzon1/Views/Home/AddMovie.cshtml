@{
    ViewData["Title"] = "Add Movie";
}
@model mission6_mcurzon1.Models.Movie

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
        <label>Category</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category x in ViewBag.Categories)
            {
                <option value="@x.CategoryID">@x.CategoryName</option>
            }
        </select>
        <label>Title</label>
        <input asp-for="Title" />
        <label>Year</label>
        <input asp-for="Year" />
        <label>Director</label>
        <input asp-for="Director" />
        <label>Rating</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label>Edited</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <label>Lent To</label>
        <input asp-for="LentTo" />
        <label>Notes</label>
        <input asp-for="Notes" />

        <button type="submit">Submit</button>
        <div asp-validation-summary="All"></div>
    </form>
</div>